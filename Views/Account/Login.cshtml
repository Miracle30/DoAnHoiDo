@{
    Layout = "_Layout";
    ViewBag.Title = "Đăng nhập";
}
@model LoginViewModel

<div class="container" style="margin-top:80px">
    
<!-- Material form register -->

<div class="row">
    <div class="col-8 mx-auto">
        <div class="card" style="font-size: 120%">

            <h5 class="card-header info-color white-text text-center py-4">
                <strong style="font-size:18px">Đăng nhập</strong>
            </h5>

            <!--Card content-->
            <div class="card-body px-lg-5 pt-0">

                <!-- Form -->
                <form class="text-center"  style="color: #757575; font-size:100%" action="/Account/Login" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger text-left" style="font-size:16px;margin-top:20px; padding:0 15px;border:0" ></div>
                    <div class="md-form mt-0">
                        <input type="text" id="materialRegisterFormEmail" class="form-control" asp-for="UserName">
                        <label for="materialRegisterFormEmail" asp-for="UserName">Tài khoản</label>
                    </div>
                    <div class="md-form">
                        <input type="password" id="materialRegisterFormPassword" class="form-control" aria-describedby="materialRegisterFormPasswordHelpBlock" asp-for="Password">
                        <label for="materialRegisterFormPassword asp-for="Password"">Mật khẩu</label>
                    </div>
                 
                    <div class="d-flex justify-content-beetween">
                        <div>
                            <!-- Remember me -->
                            <div class="custom-control custom-checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" asp-for="ReturnUrl" value="@(Context.Request.Query["ReturnUrl"])">
                    <!-- Sign in button -->
                    <button class="btn btn-info btn-block my-4" type="submit">Đăng nhập</button>

                    <!-- Register -->
                    <p>
                        <a asp-action="register" asp-controller="Account" >Đăng ký</a>
                    </p>


                </form>
                <!-- Form -->

            </div>

        </div>

    </div>

</div>
<!-- Material form register -->
</div>