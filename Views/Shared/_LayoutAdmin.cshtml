
<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

 <title>Admin - @ViewBag.Title</title>

  <!-- Bootstrap core CSS -->
  <link href="~/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  
  <link href="~/admin/css/simple-sidebar.css" rel="stylesheet">
  <link rel="stylesheet" href="~/assets/css/mdbootstrap.min.css">
  <script src="~/assets/js/fontawesome.js" crossorigin="anonymous"></script>
    @if(IsSectionDefined("Css"))
    {
        @RenderSection("Css", required:true)
    }
</head>

<body>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading"><a href="/admin/dashboard">Admin Dashboard </a></div>
      <div class="list-group list-group-flush">
        @* <a href="~/admin/dashboard" class="list-group-item list-group-item-action bg-light">Dashboard</a> *@
        <a href="~/admin/profile" class="list-group-item list-group-item-action bg-light">Hồ sơ</a>
        <a href="~/admin/employee" class="list-group-item list-group-item-action bg-light">Quản lý nhân viên</a>
        <a href="~/admin/route" class="list-group-item list-group-item-action bg-light">Quản lý lộ trình</a>
        <a href="~/admin/car" class="list-group-item list-group-item-action bg-light">Quản lý xe</a>
        <a href="~/admin/ticket" class="list-group-item list-group-item-action bg-light">Quản lý vé</a>
        <a href="~/admin/order" class="list-group-item list-group-item-action bg-light">Quản lý doanh thu</a>
        <a href="~/admin/post" class="list-group-item list-group-item-action bg-light">Quản lý tin tức</a>
        <a href="~/admin/contact" class="list-group-item list-group-item-action bg-light">Quản lý phản hồi</a>
      </div>
    </div>

    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn  btn-sm" id="menu-toggle"><i class="fas fa-bars"></i></button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                 @User.Identity.Name
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                 <a class="dropdown-item" javascript:void(0)>
                        <form method="post" asp-action="logout" asp-controller="account" style="width:140px" >
                            <button type="submit" class="nav-ink btn-btn-link py-0" style="border:none; width:100%">
                                Đăng xuất
                            </button>
                        </form>
                  </a>
              </div>
            </li>
          </ul>
        </div>
      </nav>

      <div class="container-fluid pt-4 a">
        @RenderBody()
      </div>
    </div>

  </div>
  <!-- /#wrapper -->

  <!-- Bootstrap core JavaScript -->
    <script src="~/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/assets/js/jquery-ui.js"></script>
   <script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/mdbootstrap.min.js"></script>
  <!-- Menu Toggle Script -->
  <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>
   
    @if(IsSectionDefined("Script"))
    {
        @RenderSection("Script", required:true)
    }
</body>

</html>
