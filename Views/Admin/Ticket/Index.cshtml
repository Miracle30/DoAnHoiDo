@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Ticket";
}

@model List<TicketViewModel>

<table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm text-center" >#ID
      </th>
      <th class="th-sm">Lộ Trình
      </th>
      <th class="th-sm">Xe
      </th>
      <th class="th-sm">Phone
      </th>
      <th class="th-sm text-center">Thời gian 
      </th>
    </tr>
  </thead>
  <tbody>   
     @foreach (var item in Model)
     {
      <tr onclick="detailList('@item.Id')" style="cursor:pointer">
          <td class="text-center">@item.Id  </td>
          <td>@item.RouteName</td>
          <td>@item.CarCode</td>
          <td>@item.Phone</td>
          <td>@item.CreatedAt</td>
      </tr>
     }
  </tbody>
</table>
@section Css{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
}
@section Script{
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
        <script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable( 
               {  
                 "order": [[ 0, "desc" ]],
                  "columnDefs": [
                    { "width": "5%", "targets": 0 },
                    { "width": "15%", "targets": 4 },
                  ]
               },
            );
            $('.dataTables_length').addClass('bs-select');
        });

        function detailList(id){
          window.location.href = "ticket/list/" + id;
        }
    </script>
}